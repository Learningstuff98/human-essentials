<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>New FAQ Entry</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><%= link_to(admin_dashboard_path) do %>
              <i class="fa fa-dashboard"></i> Home
            <% end %>
          </li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>

<%= simple_form_for @article, url: admin_articles_path do |f| %>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- jquery validation -->
          <div class="card card-primary card-outline">
            <!-- /.card-header -->
            <div class="card-header">
              <h3>Create New FAQ Entry</h3>
            </div>
            <!-- form start -->
            <div class="card-body">
              <div class="form-inputs">
                <%= f.input :question %>
                <%= f.input :for_partners, as: :boolean %>
                <%= f.input :for_organizations, as: :boolean %>
                <%= f.rich_text_area :content %>
              </div>
            </div>
            <div class="card-footer">
              <%= submit_button %>
            </div>
          </div>
        </div>
        <!-- /.card -->
      </div>
    </div>
  </section>
<% end %>
