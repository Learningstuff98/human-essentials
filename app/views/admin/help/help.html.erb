<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <!-- Default box -->
        <div class="card card-info mt-2">
          <div class="card-header">
            <h2 class="card-title">Frequently Asked Questions</h2>
          </div>
          <div class="card-body p-4">
            <ul class="list-inside my-2 list-decimal space-y-5">
              <%= new_button_to new_admin_article_path, { text: "Write A New Question And Answer" } %>

              <div class='text-2xl font-bold'>Questions For Banks</div>
              <% @bank_articles.each do |bank_article| %>
                <div class="accordion" id="accordion">
                  <div class="card">
                    <div class="card-header" id="heading">
                      <h2 class="mb-0">
                        <button class="text-left text-2xl" type="button" data-toggle="collapse" data-target="#collapse<%= bank_article.id %>" aria-expanded="false" aria-controls="collapse<%= bank_article.id %>">
                          <%= bank_article.question %>
                        </button>
                        <div class="admin-article-buttons">
                          <%= edit_button_to edit_admin_article_path(bank_article) %>
                          <%= delete_button_to admin_article_path(bank_article) %>
                        </div>
                      </h2>
                    </div>
                    <div id="collapse<%= bank_article.id %>" class="collapse" aria-labelledby="heading" data-parent="#accordion">
                      <div class="card-body">
                        <%= bank_article.content %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>

              <div class='text-2xl font-bold'>Questions For Partners</div>
              <% @partner_articles.each do |partner_article| %>
                <div class="accordion" id="accordion">
                  <div class="card">
                    <div class="card-header" id="heading">
                      <h2 class="mb-0">
                        <button class="text-left text-2xl" type="button" data-toggle="collapse" data-target="#collapse<%= -partner_article.id %>" aria-expanded="false" aria-controls="collapse<%= -partner_article.id %>">
                          <%= partner_article.question %>
                        </button>
                        <div class="admin-article-buttons">
                          <%= edit_button_to edit_admin_article_path(partner_article) %>
                          <%= delete_button_to admin_article_path(partner_article) %>
                        </div>
                      </h2>
                    </div>
                    <div id="collapse<%= -partner_article.id %>" class="collapse" aria-labelledby="heading" data-parent="#accordion">
                      <div class="card-body">
                        <%= partner_article.content %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>

            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
